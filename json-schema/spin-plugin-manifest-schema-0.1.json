{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://github.com/fermyon/spin-plugins/json-schema/spin-plugin-manifest-schema-0.1.json",
    "type": "object",
    "title": "spin-plugin-manifest-schema-0.1",
    "required": [
        "name",
        "description",
        "homepage",
        "version",
        "license",
        "packages"
    ],
    "properties": {
        "name": {
            "type": "string",
            "pattern": "spin-[a-zA-Z0-9.-_]+$"
        },
        "description": {
            "type": "string"
        },
        "homepage": {
            "type": "string",
            "required": false
        },
        "version": {
            "type": "string"
        },
        "license": {
            "type": "string"
        },
        "packages": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "os",
                    "arch",
                    "url",
                    "sha256"
                ],
                "properties": {
                    "os": {
                        "type": "string",
                        "enum": [
                            "linux",
                            "osx",
                            "windows"
                        ]
                    },
                    "arch": {
                        "type": "string",
                        "enum": [
                            "amd64",
                            "aarch64"
                        ]
                    },
                    "url": {
                        "type": "string"
                    },
                    "sha256": {
                        "type": "string"
                    }
                }
            }
        }
    }
}